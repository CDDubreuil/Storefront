@{
}
@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Check<span>out</span></h2>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-md-6 offset-3 border shadow rounded p-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="invalid-feedback"></div>
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" placeholder="something" />
                <label asp-for="FirstName" class="control-label"></label>
                <span asp-validation-for="FirstName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" placeholder="something" />
                <label asp-for="LastName" class="control-label"></label>
                <span asp-validation-for="LastName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="CustomerCity" class="form-control" placeholder="something" />
                <label asp-for="CustomerCity" class="control-label"></label>
                <span asp-validation-for="CustomerCity" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="CustomerState" class="form-control" placeholder="something" />
                <label asp-for="CustomerState" class="control-label"></label>
                <span asp-validation-for="CustomerState" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="CustomerZip" class="form-control" placeholder="something" />
                <label asp-for="CustomerZip" class="control-label"></label>
                <span asp-validation-for="CustomerZip" class="invalid-feedback"></span>
            </div>
            <div class="form-floating d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

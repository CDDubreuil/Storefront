@model Storefront.DATA.EF.Models.Genre

@{
    ViewData["Title"] = "Create";
}

<h2>Create a New Genre</h2>



<div class="row  cute-card">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreDescription" class="control-label"></label>
                <input asp-for="GenreDescription" class="form-control" />
                <span asp-validation-for="GenreDescription" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn btn-default cute-button" />
            </div>
        </form>

    </div>
</div>

<div >
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

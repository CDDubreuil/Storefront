@page
@model Storefront.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 mx-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email Address" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" type="password"class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- Custom Fields -->
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="First Name" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="Last Name" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Address" class="form-control" autocomplete="Address" aria-required="true" placeholder="Address" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" autocomplete="City" aria-required="true" placeholder="City" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.State" class="form-control" autocomplete="State" aria-required="true" placeholder="State" />
                <label asp-for="Input.State"></label>
                <span asp-validation-for="Input.State" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Zip" class="form-control" autocomplete="Zip" aria-required="true" placeholder="Zip" />
                <label asp-for="Input.Zip"></label>
                <span asp-validation-for="Input.Zip" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Phone" class="form-control" autocomplete="Phone" aria-required="true" placeholder="Phone" />
                <label asp-for="Input.Phone"></label>
                <span asp-validation-for="Input.Phone" class="invalid-feedback"></span>
            </div>


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
